<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:fitsSystemWindows="true"
    tools:context="com.lfk.drawapictiure.Activity.CodeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/code_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black" />

    <com.lfk.drawapictiure.View.CodeView.CodeView
        android:id="@+id/mcodeview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/code_toolbar"
        android:layerType="hardware" />

    <ImageView
        android:id="@+id/code_back"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="14dp"
        android:padding="4dp"
        android:src="@mipmap/iconfont_fanhui" />

    <TextView
        android:id="@+id/code_first"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:gravity="center"
        android:singleLine="true"
        android:text=""
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/code_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="2dp"
        android:background="#00000000"
        android:padding="16dp"
        android:text="编辑"
        android:textColor="@color/white" />
</RelativeLayout>
